es5-shim                # ECMAScript 5 compatibility for older browsers.
ecmascript              # Enable ECMAScript2015+ syntax in app code
#gadicc:ecmascript-hot

#autopublish             # Publish all data to the clients (for prototyping)
#insecure                # Allow all DB writes from clients (for prototyping)

fourseven:scss          # Sass and SCSS support for Meteor.js (with autoprefixer and sourcemaps).
seba:minifiers-autoprefixer # Standard minifiers used with Meteor apps by default + css autoprefixer.
standard-minifier-js    # Standard javascript minifiers used with Meteor apps by default.

practicalmeteor:mocha   # Write package tests with mocha and run them in the browser or from the command line with spacejam.
kadira:flow-router-ssr  # Same as kadira:flow-router, but with SSR support

