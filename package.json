{
  "name": "ld-meteor",
  "version": "0.0.1",
  "description": "Living Documents implemented in Meteor (web framework)",
  "keywords": [
    "living",
    "documents",
    "meteor",
    "react"
  ],
  "main": "app/common/lib/main.js",
  "scripts": {
    "dev": "meteor --settings settings-dev.json",
    "prod": "meteor run --production --settings settings-dev.json",
    "test": "meteor test --settings settings-dev.json --driver-package practicalmeteor:mocha --port 3100",
    "testall": "meteor test --settings settings-dev.json --full-app --driver-package practicalmeteor:mocha --port 3101",
    "test-travis": "meteor test --once --settings settings-dev.test.json --driver-package dispatch:mocha-phantomjs",
    "testall-travis": "meteor test --once --full-app --settings settings-dev.test.json --driver-package dispatch:mocha-phantomjs",
    "test-build": "meteor build /tmp/build --directory && run-build",
    "lint": "eslint ./app/**/*.js"
  },
  "repository": "learning-layers/LD-Meteor",
  "author": "Martin Bachl <martin@bachl.pro>",
  "contributors": [
    "Philipp Dallmann <philipp.dallmann@outlook.com>"
  ],
  "license": "MIT",
  "engines": {
    "node": "0.10.40"
  },
  "dependencies": {
    "bootstrap-sass": "^3.3.6",
    "hopscotch": "^0.2.5",
    "meteor-node-stubs": "^0.2.3",
    "react": "^15.0.2",
    "react-addons-test-utils": "^15.0.2",
    "react-bootstrap": "^0.29.3",
    "react-dom": "^15.0.2",
    "react-komposer": "^1.8.0",
    "react-mounter": "^1.0.0",
    "react-transform-catch-errors": "^1.0.2",
    "react-transform-hmr": "^1.0.2"
  },
  "devDependencies": {
    "eslint": "^2.9.0",
    "eslint-config-standard": "^5.3.1",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-plugin-transform-decorators": "^6.8.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-decorators-legacy": "^1.0.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-meteor": "^6.6.8",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "eslint-config-standard-jsx": "^1.2.0",
    "eslint-plugin-promise": "^1.1.0",
    "eslint-plugin-react": "^5.0.1",
    "eslint-plugin-standard": "^1.3.2",
    "react-transform-catch-errors": "^1.0.2",
    "react-transform-hmr": "^1.0.4",
    "redbox-react": "^1.2.4",
    "ws": "^1.1.0"
  },
  "ecmascript-hot": {
    "transformStateless": {
      "pathMatch": "\\.jsx$",
      "sourceMatch": [
        "^import React",
        "m"
      ]
    },
    "babelEnvForTesting": "production"
  }
}
